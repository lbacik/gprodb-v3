{% props tag = 'a', href = '#', genre = 'primary', type = 'submit', active = true, px = 2, py = 2, w = 24 %}

{% set baseClasses = 'font-bold drop-shadow-xl' %}

{% set colors = {
    primary: baseClasses ~ ' bg-blue-500 hover:bg-blue-700 text-white',
    lightBlue: 'bg-blue-300 hover:bg-blue-500 text-white',
    lightBlueOutline: ' bg-white hover:bg-blue-300 text-blue-500 border border-blue-500',
    lightBlueWhite: 'hover:bg-blue-100 text-blue-500 hover:text-blue-800',
    secondary: 'bg-gray-500 hover:bg-gray-700 text-white',
    success: 'bg-green-500 hover:bg-green-700 text-white',
    danger: baseClasses ~ ' bg-red-500 hover:bg-red-700 text-white',
    warning: 'bg-yellow-500 hover:bg-yellow-700 text-white',
    light: 'bg-gray-200 hover:bg-gray-300 text-blue-500',
    lightSecondary: 'text-gray-500 hover:text-blue-600 hover:bg-blue-50',
    lightOutline: 'text-gray-300 rounded border border-gray-400 font-bold hover:border-white',
    dark: 'bg-gray-800 hover:bg-gray-900 text-white',
} %}

{% if active %}
    {% set classes = colors[genre] ~ ' rounded w-' ~ w ~ ' text-sm py-' ~ py ~ ' px-' ~ px %}
{% else %}
    {% set classes = colors['light'] ~ ' rounded w-' ~ w ~ ' text-sm py-' ~ py ~ ' px-' ~ px %}
{% endif %}

{% if tag == 'button' %}
    {% set classes = classes ~ ' cursor-pointer' %}
{% endif %}

{% if tag == 'a' %}
    {% set classes = classes ~ ' inline-block text-center' %}
{% endif %}

<{{ tag }} {{ attributes.defaults({ class: classes }) }}
    {% if tag == 'a' %} href="{{ href }}" {% endif %}
    {% if tag == 'button' %} type="{{ type }}" {% endif %}
>{% block content %}{% endblock %}</{{ tag }}>

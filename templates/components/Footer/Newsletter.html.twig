<div class="w-full flex">

        <div class="w-1/2 flex items-center justify-end mr-10">
            <strong class="block text-end text-lg font-thin text-gray-400">
                {{ "newsletter.description"|trans }}
            </strong>
        </div>

        <div class="w-1/2">
            {{ form_start(form, {
                'attr': {
                    'class': 'form',
                }
            }) }}

                <div class="flex max-w-md gap-x-4">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'sr-only'}}) }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {
                        'attr': {
                            'class': 'min-w-0 flex-auto rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6',
                            'placeholder': 'Enter your email'
                        }
                    }) }}

                    <button type="submit"
                            class="flex-none rounded-md bg-indigo-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500"
                    >Subscribe</button>
                </div>

                {{ form_widget(form.security) }}
            {{ form_end(form) }}
        </div>
</div>

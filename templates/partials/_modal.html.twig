<div
        data-controller="modal"
        data-action="turbo:before-cache@window->modal#close"
>
    <dialog
            class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-gray-100 rounded-lg shadow-xl inset-0 w-full md:w-fit md:max-w-[50%] md:min-w-[50%] animate-fade-in backdrop:bg-slate-600 backdrop:bg-opacity-80 backdrop:backdrop-blur-sm"
            data-modal-target="dialog"
            data-action="close->modal#close click->modal#clickOutside"
    >
        <div class="flex grow p-5">
            <div class="grow overflow-auto p-1">
                <turbo-frame
                        id="modal"
                        class="aria-busy:opacity-50 aria-busy:delay-500 transition-opacity"
                        data-modal-target="dynamicContent"
                >
{#                    {% if app.request.headers.get('turbo-frame') == 'modal' %}#}
                        <turbo-stream action="append" target="flash-container">
                            <template>{{ include('partials/_flashes.html.twig') }}</template>
                        </turbo-stream>
{#                    {% endif %}#}
                </turbo-frame>
            </div>
        </div>
    </dialog>
</div>
